<div class="box">
  <% if current_user == pin.user %>
    <%= image_tag pin.image(:medium) %>
    <%=  link_to pin.title, pin%>
    <div class="btn-group">
      <%= link_to  edit_pin_path(pin),  class: 'btn' do %>
      <i class="icon-edit"></i>
      <% end %>
      <%= link_to pin, class: 'btn', method: :delete, data: { confirm: 'Are you sure?' } do  %>
      <i class="icon-trash"></i>
      <% end %>
    </div>

  <% else %>
   <%= image_tag pin.image(:medium) %>
   <%=  link_to pin.title, pin%>
  <% end %>
</div>
